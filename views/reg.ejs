<% include layoutTop.ejs %>

<div class="row" style="margin-top:80px;">

  <div class="col-md-offset-2 col-md-6">
      <form class="form-horizontal" role="form" action="/reg" method="post">
    
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label custom_label_style">用户名</label>
          <div class="col-sm-9">
            <input type="text" class="form-control input-lg" id="username" name="username" placeholder="用户名/昵称">
            <span class="help-block">你的账户的名称,用于登录和显示</span>
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-3 control-label custom_label_style">密码</label>
          <div class="col-sm-9">
            <input type="password" class="form-control input-lg" id="password" name="password" placeholder="密码">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-3 control-label custom_label_style">确认密码</label>
          <div class="col-sm-9">
            <input type="password" class="form-control input-lg" id="password-repeat" name="password-repeat" placeholder="确认密码">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-success btn-lg" style="width:100%;">加入MicroBlog</button>
          </div>
        </div>
   
      </form>
  </div>
</div>
<% if (error && error.length) { %>
 <div class="alert alert-danger"><%= error %></div>
<% } %>
<% include layoutBottom.ejs %>